@model (CinemaVillage.AppModel.Directors.DirectorAddAppModel, List<CinemaVillage.AppModel.Directors.DirectorsAppModel>, dynamic)

<form asp-controller="Admin" asp-action="SubmitFormDeleteDirector" method="post" id="formDeleteMovie" class="flex flex-col gap-3 justify-start items-center font-BarlowSemiCondensed text-xl text-zinc-50">

    <input asp-for="@Model.Item1.Id" value="@Model.Item2.Where(u => u.Id.ToString() == Model.Item3).FirstOrDefault().Id" hidden />

    <label id="FirstName">First Name</label>
    <input asp-for="@Model.Item1.FirstName" id="firstNameInput" value="@Model.Item2.Where(u => u.Id.ToString() == Model.Item3).FirstOrDefault().FirstName" class="rounded-full text-slate-700" type="text" readonly />
    <span asp-validation-for="@Model.Item1.FirstName" class="text-black text-danger"></span>

    <label id="LastName">Last Name</label>
    <input asp-for="@Model.Item1.LastName" id="lastNameInput" value="@Model.Item2.Where(u => u.Id.ToString() == Model.Item3).FirstOrDefault().LastName" class="rounded-full text-slate-700" type="text" readonly />
    <span asp-validation-for="@Model.Item1.LastName" class="text-black text-danger"></span>

    <button id="btnSubmitFormUpdateUser" class="rounded-full bg-slate-700 shadow-xl border-r-4 w-36 border-b-4 mt-4 border-slate-800 active:translate-y-[2px] active:border-b-2 active:border-r-2">
        Delete director
    </button>

</form>
