@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;

@model CinemaVillage.ViewModels.Home.HomeViewModel

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">

    <title>Cinema Village</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/output.css">
    <script src="~/js/script.js" defer></script>
    <script src="~/js/Animation.js" defer></script>
    <script src="~/js/LoginSignUpForm.js" defer></script>
    <link rel="icon" href="~/img/IuliaLogo.png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Fraunces:ital,opsz,wght@0,9..144,100..900;1,9..144,100..900&family=Gothic+A1&family=Hanken+Grotesk:ital,wght@0,100..900;1,100..900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Lora:ital,wght@0,400..700;1,400..700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">


    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.2/anime.min.js" integrity="sha512-aNMyYYxdIxIaot0Y1/PLuEu3eipGCmsEUBrUq+7aVyPGMFH8z0eTP0tkqAvv34fzN6z+201d3T8HPb1svWSKHQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://kit.fontawesome.com/7d75bced7a.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


</head>

<body>
    <div>
        <div id="overlay" class="fixed bg-opacity-30 bg-slate-800 h-screen w-screen z-30 hidden ">
            <div class="flex flex-row-reverse mr-8 mt-6 opacity-100 ">
                <button id="close" class="opacity-100">

                    <span class="absolute block w-10  h-1 rounded-full rotate-45 bg-night opacity-100"></span>
                    <span class="block w-10  h-1 rounded-full -rotate-45 bg-night opacity-100"></span>

                </button>
            </div>

            <div class="flex items-center justify-center">
                <div id="transition" class="z-20 flex flex-col items-center content-center justify-evenly rounded-l-full bg-lavender-bush">

                    <img class="w-36 h-auto" src="~/img/IuliaLogo.png">
                    <button id="logIn" class="mb-4 ml-10 text-lg font-BarlowSemiCondensed text-neutral-400">Log In -></button>

                </div>
                <div>
                    <div id="SignUp" class="z-30 text-center h-auto gap-5 w-44 mt-5 p-28 pt-4 bg-mustard-100 rounded-xl flex flex-col justify-start items-center md:px-44 shadow-2xl">

                        <h1 id="FormTitle" class=" w-48 text-lavender-bush font-Fraunces text-4xl p-0 m-0 mb-2 ">Sign Up</h1>

                        <partial name="/Views/Shared/Forms/FormSignUp.cshtml" model="@Model.SignUpAppModel" />

                    </div>

                    <div id="LogIn" class="hidden z-30 text-center h-auto gap-5 w-44 mt-5 p-28 pt-4 bg-mustard-100 rounded-xl flex flex-col justify-start items-center md:px-44 shadow-2xl">
                        

                        <h1 id="FormTitle" class=" w-48 text-lavender-bush font-Fraunces text-4xl p-0 m-0 mb-2 ">Log In</h1>

                        <partial name="/Views/Shared/Forms/FormLogIn.cshtml" model="@Model.LogInAppModel" />

                    </div>


                </div>
            </div>
        </div>
    </div>

    <div>
        <nav class="flex items-center justify-between bg-zinc-50 p-5 text-slate-700 font-BarlowSemiCondensed">
            <a href="/" class="text-4xl font-Bebas-Neue text-mustard-200">Cinema Village</a>
            <ul id="navItems" class="hidden items-center sm:flex md:flex-row md:gap-6 md:mr-3 md:text-2xl md:visible">

                <li class="hover:text-mustard-200"> <a asp-controller="About" asp-action="Index">About</a></li>
                <li class="hover:text-mustard-200"> <a asp-controller="AllMovie" asp-action="Index">All Movies</a></li>
                <li class="hover:text-mustard-200"> <a asp-controller="Program" asp-action="Index">Program</a></li>
                <li class="hover:text-mustard-200"> <a asp-controller="Contact" asp-action="Index">Contact</a></li>

                @if (Model.LoggedInUserAppModel.IsLoggedIn)
                {
                    if (Model.LoggedInUserAppModel.Role.Equals("admin"))
                    {
                        <li class="hover:text-mustard-200">
                            <a asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                        </li>
                    }

                    <li class="hover:text-mustard-200">
                        <a asp-controller="User" asp-action="Index">My Profile</a>
                    </li>

                    <li class="hover:text-mustard-200">
                        <a asp-controller="Access" asp-action="LogOut">Log Out</a>
                    </li>
                }

                @if (!Model.LoggedInUserAppModel.IsLoggedIn)
                {
                    <button id="join" class="relative inline-flex items-center justify-start px-5 py-3 overflow-hidden font-BarlowSemiCondensed rounded-full group">
                        <span class="w-32 h-32 rotate-45 translate-x-12 -translate-y-2 absolute left-0 top-0 bg-mustard-200 opacity-[3%]"></span>
                        <span class="absolute top-0 left-0 w-48 h-48 -mt-1 transition-all duration-500 ease-in-out rotate-45 -translate-x-56 -translate-y-24 bg-mustard-100 opacity-100 group-hover:-translate-x-8"></span>
                        <span class="relative w-full text-left text-slate-800 transition-colors duration-200 ease-in-out group-hover:text-white">
                            Sign In
                        </span>
                        <span class="absolute inset-0 border-2 border-slate-800 rounded-full hover:border-night"></span>

                    </button>
                }
            </ul>
        </nav>
    </div>

    <div class="h-screen bg-zinc-50">
        <div class=" gap-0 flex items-center justify-center flex-col bg-night">

            <div class="text-center ">
                <h1 class="w-full text-8xl z-20 m-5 font-Bebas-Neue font-bold text-mustard-200">Cinema Village</h1>
            </div>
            <div class="grid grid-cols-3 grid-rows-1 ">
                <div class="col-start-1 col-span-1 row-start-1 relative md:bottom-1/4  2xl:bottom-[10%] opacity-50">
                    <img class="invert" src="~/img/HeroImage.png">
                </div>
                <div id="mainBackground" class="col-span-3 col-start-1 row-start-1 flex flex-grow overscroll-none items-center justify-center h-screen w-full relative bg-no-repeat bg-center bg-auto">

                    <div class="relative m-0 left-20 scale-75 grayscale max-w-96 h-auto rounded-lg opacity-70 shadow-md">
                        <button id="prev">
                            <img id="img3" src="https://i.pinimg.com/564x/5a/6c/d5/5a6cd5209511b24562fc58f6d86dac2a.jpg">
                        </button>
                    </div>

                    <div class="relative m-0 max-w-96 z-20 rounded-md hover:ease-in hover:duration-200 hover:scale-110
                            sm:max-w-96
                            md:max-w-96 md:h-auto md:shadow-lg ">
                        <img id="img1" class="" src="~/img/Dune.jpg">

                    </div>
                    <div class=" relative right-20 m-0 max-w-96 scale-75
                            sm:max-w-96
                            md:max-w-96 md:h-auto  md:rounded-md md:opacity-70 md:shadow-md grayscale">
                        <button id="next">
                            <img id="img2" src="https://i.pinimg.com/564x/c4/a1/66/c4a1662eec2aeb848ed172b3677eb02b.jpg">
                        </button>
                    </div>

                </div>
            </div>
        </div>
        <div class="bg-mustard-200 h-screen flex items-center justify-center">
            <h1 class="text-[14rem] font-Bebas-Neue text-night font-bold">Open Air Cinema</h1>
            <p class="text-2xl text-zinc-800 font-Montserrat font-bold">
                Cinema Village is an open-air movie theater offering a magical summer experience under the stars. <br>
                Ditch the stuffy cinemas and settle into comfy <br>seats for a unique night with friends,
                loved ones, or simply your adventurous spirit.
            </p>
        </div>
    </div>
    
</body>

</html>
